@page "/item/getallitem"
@using MAUILocal.Services
@using MAUILocal.Model
@inject IItemService db;
<h3 class="disp">All Items</h3>
        <div class="container">
            <div class="card">
           
                    @foreach (var d in cat)
                    {
                        <div class="content">
                        <h2><b>@d.prodname</b></h2>
                        <div class="img-wt-des">
                            <img src="@d.imgur" class="imgg" style="align-items:center"/>
                            <br/>
                            <div class="des">
                            
                            <p>@d.description</p>
                            </div>
                            </div>
                    <h4>Rs. @d.price.00</h4>
                               
                               
                                    <NavLink class="buttongreen" href="@($"cart/addtocart/{d.id}")">Add To Cart</NavLink>
                               

                            </div>
                            <hr />
                    }

               
            </div>
        </div>




@code {
    private List<Items> cat = new List<Items>();
    protected override void OnInitialized()
    {
        cat = db.GetAllItems();
    }
}
